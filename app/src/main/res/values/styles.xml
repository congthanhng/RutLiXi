<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Title text when CollapseToolbarLayout collapsed-->
    <style name="TextAppearance.Collapsed" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:title">@string/app_name</item>

    </style>

    <!-- Title text when CollapseToolbarLayout expanded-->
    <style name="TextAppearance.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textTitle_expanded_size</item>
        <item name="android:title">@string/app_name</item>
    </style>

    <!-- background toolbar -->
    <style name="bg_toolbar">
        <item name="android:src">@drawable/background_main_screen_2</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:background">@drawable/shape_diveder</item> //you can give your color here. that will change all divider color in your app.
        <item name="android:padding">5dp</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
